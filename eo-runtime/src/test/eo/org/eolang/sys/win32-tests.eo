+alias org.eolang.sys.os
+architect yegor256@gmail.com
+home https://github.com/objectionary/eo
+tests
+package org.eolang.sys
+version 0.0.0

# Test.
[] > converts-win32-inet-addr
  or. > @
    os.is-windows.not
    QQ.io.stdout
      QQ.txt.sprintf
        "Windows inet_addr '%d'"
        *
          code.
            win32
              "inet_addr"
              * "127.0.0.1"

# Test.
[] > win32-sockaddr-in-returns-valid-size
  or. > @
    os.is-windows.not
    eq.
      size.
        win32.sockaddr-in
          win32.af-inet.as-i16
          8888.as-i16
          as-i32.
            code.
              win32
                "inet_addr"
                * "169.81.81.74"
      16
